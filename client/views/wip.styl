
@import "client/views/colors"
@import "client/views/variables"
    
.sortable
    list-style-type none
    margin 0
    padding 0

.team
    .wip
        border-radius border_radius_width * 4
        border-style  solid
        border-width  drag_drop_border_width        
        display table-cell
        margin  inter-kanban-spacing
        padding inter-kanban-spacing        
        vertical-align top
        width 12em
    &.red .wip
        background   red_color
        border-color red_color
    &.orange .wip
        background   orange_color
        border-color orange_color                
    &.blue .wip
        background   blue_color
        border-color blue_color                
    &.green .wip
        background   green_color
        border-color green_color                
        
