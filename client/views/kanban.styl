
@import "colors"
@import "variables"

.kanban
    border-radius border_radius_width * 2        
    border-style  solid
    border-width  drag_drop_border_width
    display inline-block !important
    font-size 1em
    margin 0.1em !important
    padding 0.25em
    &.pulled .size
        color White        
    &.in-progress .size
        color White
    &.red
        background   lightest_red_color
        border-color lightest_red_color
        &.pullable .size
            color lightest_red_color
        &.pushable .size
        &.pushed .size        
            color red_color                
    &.orange
        background   lightest_orange_color
        border-color lightest_orange_color
        &.pullable .size
            color lightest_orange_color
        &.pushable .size
        &.pushed .size
            color orange_color                
    &.blue
        background   lightest_blue_color
        border-color lightest_blue_color
        &.pullable .size
            color lightest_blue_color
        &.pushable .size
        &.pushed .size
            color blue_color
    &.green
        background   lightest_green_color
        border-color lightest_green_color
        &.pullable .size
            color lightest_green_color
        &.pushable .size
        &.pushed .size        
            color green_color        


    
    
    
.Xkanban
    border-radius border_radius_width * 2        
    border-style  solid
    border-width  drag_drop_border_width
    display inline-block
    line-height 0
    margin inter-kanban-spacing
    padding 0
    &.red
        background   lightest_red_color
        border-color lightest_red_color
    &.orange
        background   lightest_orange_color
        border-color lightest_orange_color
    &.blue
        background   lightest_blue_color
        border-color lightest_blue_color
    &.green
        background   lightest_green_color
        border-color lightest_green_color
    &.Xpullable
        width 2em
        height 1.5em