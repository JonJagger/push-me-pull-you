
@import "centered"
@import "colors"
@import "variables"

thin_space()
    content "\2009"

button_color = lighten(#996666, 20%)

.home
    centered()
    Xdisplay table
    Xmargin 0 auto
    .greeting
        font-size 2.5em
        padding 0.25em
        #push, #me, #pull, #you
            border-radius 0.5em
            padding-top    0.0em
            padding-left   0.35em
            padding-right  0.35em
            padding-bottom 0.1em
            cursor default
        #push
            background lightest_red_color
            color light_red_color            
        #me
            background lightest_orange_color
            color light_orange_color 
        #pull
            background lightest_blue_color
            color light_blue_color
        #you
            background lightest_green_color        
            color light_green_color
  
    input[type=button]
        font-family fonts 
        color button_color
        background LightGray
        cursor pointer
        font-size 2.5em 
        padding-bottom 0.1em        
        padding-left   0.3em
        padding-right  0.3em
        padding-top    0.0em
        &:disabled
            color DarkGray
            cursor default

    .arrow 
        color LightGray
        font-size 1em
        margin 2px
        padding-bottom 7px
        display table-cell
        &:after
            thin_space()
  
    input[id=gid]
        font-family fonts     
        background button_color
        color LightGray
        font-size 2.5em
        text-align center
        width 4em

    #join-dashboard-container
        border-color  LightGray
        border-radius 10px
        border-style  dotted
        border-width  1px
        padding 1em

