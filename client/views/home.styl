
@import "nib"
@import "client/colors"

button-color = #996666

.noTitle .ui-dialog-titlebar
    display none

#home 
    margin 0 auto
    display table
    #greeting
        font-size 2.5em
        padding 0.25em
        #the
            color red-color
        #kanban
            color orange-color 
        #ones
            color blue-color
        #game
            color green-color
        .arrow 
            color Gray
            font-size 0.5em
            vertical-align center
  
    input[type=button] 
        border-radius 10px
        font-size 2.5em 
        text-align center
        padding-left 0.5em
        padding-right 0.5em
        padding-top 0.1em
        padding-bottom 0.2em        
        cursor pointer
        background button-color
        color LightGray
        &:disabled
            color DarkGray
            font-style italic
            cursor default
            
    .arrow 
        color Gray
        font-size 1em
  
    input[id=gid] 
        font-size 2.5em 
        width 4em
        text-align center
        background LightGray
        color button-color

