
@import "colors"

button_color = lighten(#996666, 20%)

.home 
    display table
    margin 0 auto
    .greeting
        font-size 2.5em
        padding 0.25em
        #push, #me, #pull, #you
            border-radius 0.5em
            padding-left  0.25em
            padding-right 0.25em
        #push
            background lightest_red_color
            color light_red_color            
        #me
            background lightest_orange_color
            color light_orange_color 
        #pull
            background lightest_blue_color
            color light_blue_color
        #you
            background lightest_green_color        
            color light_green_color
        .arrow 
            color LightGray
            font-size 0.5em
            vertical-align center
  
    input[type=button] 
        background button_color
        border-radius 10px
        color LightGray
        cursor pointer
        font-size 2.5em 
        padding-bottom 0.2em        
        padding-left   0.5em
        padding-right  0.5em
        padding-top    0.1em
        &:disabled
            color DarkGray
            cursor default
            font-style italic

    .arrow 
        color LightGray
        font-size 1em
        margin 2px
  
    input[id=gid] 
        background LightGray
        color button_color
        font-size 2.5em
        text-align center
        width 4em

    #join_resume_review
        border-color  LightGray
        border-radius 10px
        border-style  dotted
        border-width  1px
        padding 1em

