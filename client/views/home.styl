
@import "nib"
@import "client/colors"

button_color = #996666

.home 
    display table
    margin 0 auto
    .greeting
        font-size 2.5em
        padding 0.25em
        #the
            color red_color
        #kanban
            color blue_color 
        #ones
            color orange_color
        #game
            color green_color
        .arrow 
            color Gray
            font-size 0.5em
            vertical-align center
  
    input[type=button] 
        background button_color
        border-radius 10px
        color LightGray
        cursor pointer
        font-size 2.5em 
        padding-left   0.5em
        padding-right  0.5em
        padding-top    0.1em
        padding-bottom 0.2em        
        &:disabled
            color DarkGray
            cursor default
            font-style italic

    .arrow 
        color Gray
        font-size 1em
        margin 2px
  
    input[id=gid] 
        background LightGray
        color button_color
        font-size 2.5em
        text-align center
        width 4em

    #join_resume_review
        border-color  Gray
        border-radius 10px
        border-style  dotted
        border-width  1px
        padding 1em
