
@import "client/colors"

border_radius_width    = 4px
drag_drop_border_color = Black
drag_drop_border_style = dotted
drag_drop_border_width = 4px
inter-kanban-spacing   = 2px

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    
.team
    font-size 0.75em
    display table
    margin 0 auto
        
    #roll
        border-radius border_radius_width
        color White            
        cursor pointer
        font-size 1.4em
        padding-left  0.5em
        padding-right 0.5em
        margin 0.2em
        vertical-align top
    &.red #roll
        background red_color
    &.orange #roll
        background orange_color
    &.blue #roll
        background blue_color
    &.green #roll
        background green_color
      
    .dice
        border-width 0
        border-radius border_radius_width * 4
        display inline-block
        line-height 0
        padding 0.5em
        padding-left  0.75em
        padding-right 0.75em

    &.red .dice
        background lightest_red_color
    &.orange .dice
        background lightest_orange_color
    &.blue .dice
        background lightest_blue_color
    &.green .dice
        background lightest_green_color
        
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .board
        border-radius border_radius_width
        margin 0 auto
        padding-top  10px
        padding-left  0px
        padding-right 0px        

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .wip
        border-radius border_radius_width * 4
        display table-cell
        margin  inter-kanban-spacing
        padding inter-kanban-spacing        
        vertical-align top
        & .kanbans-column
            vertical-align top
        
    &.red .wip
        background lightest_red_color
    &.orange .wip
        background lightest_orange_color
    &.blue .wip
        background lightest_blue_color
    &.green .wip
        background lightest_green_color
        
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -        
    .kanban
        border-radius 0.75em
        border-style  solid
        border-width  drag_drop_border_width
        margin  inter-kanban-spacing
        padding 0
        &.red
            background   red_color
            border-color red_color
        &.orange
            background   orange_color
            border-color orange_color
        &.blue
            background   blue_color
            border-color blue_color
        &.green
            background   green_color
            border-color green_color
