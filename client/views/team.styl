
@import "client/colors"

single_bullet = '\2022'

drag_drop_border_width = 4px
drag_drop_border_style = dotted
drag_drop_border_color = Black

border_radius_width = 8px

wip_color = Moccasin

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

.team
    font-size 0.75em
    margin 0 auto
    
    #roll
        border-radius border_radius_width
        font-size 1.4em
        text-align center
        padding-left 0.5em
        padding-right 0.5em
        cursor pointer
        color White            
      
    .dice
        #roll
            &.red
                background red_color
            &.blue
                background blue_color
            &.orange
                background orange_color
            &.green
                background green_color

    .dice_container
    .board_container
        margin 0 auto
        padding 0
        
    .dice
    .board
        margin 0 auto
        padding 10px
                
    .one
    .not-one
        border-radius border_radius_width
        display inline
        padding-top 2px
        padding-right 12px
        padding-bottom 4px
        padding-left 12px
        font-size 1.2em
        border-width drag_drop_border_width
        border-style solid
        border-color White
        color White

    .one:before
    .not-one:before
        content single_bullet

    .not-one
        background White

    .one
        &.red
            background red_color
        &.blue
            background blue_color
        &.orange
            background orange_color
        &.green
            background green_color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .board
        border-radius border_radius_width        
        padding 0.5em
        &.red
            background   red_color
            border-color red_color
        &.orange
            background   orange_color
            border-color orange_color
        &.blue
            background   blue_color
            border-color blue_color
        &.green
            background   green_color
            border-color green_color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .portal 
        border-width drag_drop_border_width
        border-style solid
        border-radius border_radius_width
        width 2em
        height 18em
        &[data-to-team=backlog] 
            background   backlog_color
            border-color backlog_color    
        &[data-to-team=red] 
            background   red_color
            border-color red_color            
        &[data-to-team=orange]
            background   orange_color
            border-color orange_color            
        &[data-to-team=blue] 
            background   blue_color
            border-color blue_color            
        &[data-to-team=green] 
            background   green_color
            border-color green_color            
        &[data-to-team = done] 
            background   done_color
            border-color done_color            

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .wip
        border-radius border_radius_width
        padding 4px
        margin-left 4px
        margin-right 4px
        height 60em
        background wip_color
        & .quarter-column
            vertical-align top
        table
            border-spacing 0
            border-collapse collapse
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .kanban
        border-radius 18px
        border-width drag_drop_border_width
        border-style solid
        border-color wip_color
        padding 4px
        margin 0px
        width 2em
        &.red
            background red_color
        &.blue
            background blue_color
        &.orange
            background orange_color
        &.green
            background green_color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .story
        font-size 1.4em
        text-align center
        border-width 0
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .one_container
        padding 2px
        
    .hole
        border-radius border_radius_width
        border-width 2px
        border-style dotted
        border-color White

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .done-one
    .todo-one
        border-radius border_radius_width
        border-width 2px
        border-style solid
        border-color White
        color White
  
    .todo-one
        background White

    .done-one
        border-color White
        &.red
            background red_color
        &.blue
            background blue_color
        &.orange
            background orange_color
        &.green
            background green_color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // DRAG DROP
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // The CSS must be sufficiently specific for them to take
    // precedence over the defaults above.
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Initial selection of draggable
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .one:hover
    .kanban.storyIsDone:hover
    .kanban.isEmpty:hover
        border-style solid
        border-color drag_drop_border_color
        cursor move

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Once dragging starts
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .ui-draggable-dragging.one    
    .ui-draggable-dragging.kanban.isEmpty
    .ui-draggable-dragging.kanban.storyIsDone  
        border-style drag_drop_border_style
        border-color drag_drop_border_color
        cursor crosshair

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Dynamically activated drop targets
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .wip .kanban.storyIsInProgress.droppable
    .board .downstream.portal.droppable
    .board .upstream.portal.droppable    
        border-style drag_drop_border_style
        border-color drag_drop_border_color
