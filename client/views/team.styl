
@import "client/views/colors"
@import "client/views/variables"

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    
.team
    font-size 0.75em
    display table
    margin 0 auto
        
    #roll
        border-radius border_radius_width
        color White            
        cursor pointer
        font-size 1.4em
        padding-left  0.5em
        padding-right 0.5em
        margin 0.2em
        vertical-align top
    &.red #roll
        background red_color
    &.orange #roll
        background orange_color
    &.blue #roll
        background blue_color
    &.green #roll
        background green_color
      
    .dice
        border-width 0
        border-radius border_radius_width * 4
        display inline-block
        line-height 0
        padding 0.5em
        padding-left  0.75em
        padding-right 0.75em

    &.red .dice
        background lightest_red_color
    &.orange .dice
        background lightest_orange_color
    &.blue .dice
        background lightest_blue_color
    &.green .dice
        background lightest_green_color
        
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .board
        border-radius border_radius_width
        margin 0 auto
        padding-top  10px
        padding-left  0px
        padding-right 0px        

