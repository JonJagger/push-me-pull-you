
@import "client/colors"

single-bullet = '\2022'

drag-drop-border-width = 4px
drag-drop-border-style = dotted
drag-drop-border-color = Black

border-radius-width = 8px

wip-color = Moccasin

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

#edge
    font-size 0.75em
    display table
    margin 0 auto
    
    #roll
        border-radius border-radius-width
        font-size 1.4em
        text-align center
        padding-left 0.5em
        padding-right 0.5em
        cursor pointer
        color White            
      
    #dice
        display table-row
        #roll
            &.red
                background red-color
            &.orange
                background orange-color
            &.blue
                background blue-color
            &.green
                background green-color

    #dice_container
        margin 0 auto
        padding 10px
        
    .one
    .not-one
        border-radius border-radius-width
        display inline
        padding-top 2px
        padding-right 12px
        padding-bottom 4px
        padding-left 12px
        font-size 1.2em
        border-width drag-drop-border-width
        border-style solid
        border-color White
        color White

    .one:before
    .not-one:before
        content single-bullet

    .not-one
        background White

    .one
        &.red
            background   red-color
        &.orange
            background   orange-color
        &.blue
            background   blue-color
        &.green
            background   green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    #team
        border-radius border-radius-width        
        padding 0.5em
        &.red
            background   red-color
            border-color red-color
        &.orange
            background   orange-color
            border-color orange-color
        &.blue
            background   blue-color
            border-color blue-color
        &.green
            background   green-color
            border-color green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .portal 
        border-width drag-drop-border-width
        border-style solid
        border-radius border-radius-width
        width 2em
        height 18em
        &[data-to-color=backlog] 
            background backlog-color
            border-color backlog-color            
        &[data-to-color=red] 
            background red-color
            border-color red-color            
        &[data-to-color=orange]
            background orange-color
            border-color orange-color            
        &[data-to-color=blue] 
            background blue-color
            border-color blue-color            
        &[data-to-color=green] 
            background green-color
            border-color green-color            
        &[data-to-color=done] 
            background done-color
            border-color done-color            

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    #wip
        border-radius border-radius-width
        padding 4px
        margin-left 4px
        margin-right 4px
        height 60em
        background wip-color
        & .quarterColumn
            vertical-align top
        table
            border-spacing 0
            border-collapse collapse
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .kanban
        border-radius 18px
        border-width drag-drop-border-width
        border-style solid
        border-color wip-color
        padding 4px
        margin 0px
        width 2em
        &.red
            background red-color
        &.orange
            background orange-color
        &.blue
            background blue-color
        &.green
            background green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .story
        font-size 1.4em
        text-align center
        border-width 0
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .one_container
        padding 2px
        
    .hole
        border-radius border-radius-width
        border-width 2px
        border-style dotted
        border-color White

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .done-one
    .todo-one
        border-radius border-radius-width
        border-width 2px
        border-style solid
        border-color White
        color White
  
    .todo-one
        background White

    .done-one
        border-color White
        &.red
            background red-color
        &.orange
            background orange-color
        &.blue
            background blue-color
        &.green
            background green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // DRAG DROP
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // The CSS must be sufficiently specific for them to take
    // precedence over the defaults above.
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Initial selection of draggable
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .one:hover
    .kanban.storyIsDone:hover
    .kanban.isEmpty:hover
        border-style solid
        border-color drag-drop-border-color
        cursor move

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Once dragging starts
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .ui-draggable-dragging.one    
    .ui-draggable-dragging.kanban.isEmpty
    .ui-draggable-dragging.kanban.storyIsDone  
        border-style drag-drop-border-style
        border-color drag-drop-border-color
        cursor crosshair

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Dynamically activated drop targets
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    #wip .kanban.storyIsInProgress.droppable
    #team #downstreamPortal.droppable
    #team #upstreamPortal.droppable    
        border-style drag-drop-border-style
        border-color drag-drop-border-color
