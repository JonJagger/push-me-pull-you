
single-bullet = '\2022'

backlog-color = LightGray
red-color     = Red
orange-color  = #FFBF00
blue-color    = Blue
green-color   = Green

droppable-border-width = 3px
droppable-border-style = dotted
droppable-border-color = Black

draggable-border-width = 3px
draggable-border-style = dotted
draggable-border-color = Black

wip-color = Moccasin

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

#edge
    font-size 0.75em
    display table
    margin 0 auto
    
    #roll
        border-radius 8px
        font-size 1em
        text-align center
        padding-left 0.5em
        padding-right 0.5em
        cursor pointer
        color White
      
    #dice
        display table-row
        #roll
            &.red
                background red-color
            &.orange
                background orange-color

    #dice_container
        margin 0 auto
        padding 10px      

    .one
    .not-one
        border-radius 8px
        display inline
        padding-top 2px
        padding-right 12px
        padding-bottom 4px
        padding-left 12px
        font-size 1.2em
        color White
        border-width draggable-border-width
        border-style solid

    .one:before
    .not-one:before
        content single-bullet

    .not-one
        background White
        &.red
            border-color red-color
        &.orange
            border-color orange-color
        &.blue
            border-color blue-color
        &.green
            border-color green-color

    .one
        &.red
            background   red-color
            border-color red-color
        &.orange
            background   orange-color
            border-color orange-color    
        &.blue
            background   blue-color
            border-color blue-color
        &.green
            background   green-color
            border-color green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    #team
        border-radius 8px
        padding 0.5em
        &.red
            background   red-color
            border-color red-color
        &.orange
            background   orange-color
            border-color orange-color
        &.blue
            background   blue-color
            border-color blue-color
        &.green
            background   green-color
            border-color green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .portal 
        border-width droppable-border-width
        border-style solid
        border-radius 4px
        width 2em
        height 18em
        &[data-toColor=backlog] 
            background backlog-color
            border-color backlog-color            
        &[data-toColor=red] 
            background red-color
            border-color red-color            
        &[data-toColor=orange]
            background orange-color
            border-color orange-color            
        &[data-toColor=blue] 
            background blue-color
            border-color blue-color            
        &[data-toColor=green] 
            background green-color
            border-color green-color            

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    #wip
        border-radius 8px
        margin-left  0.5em
        margin-right 0.5em        
        height 40em
        background wip-color
        & .quarterColumn
            vertical-align top
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .kanban 
        border-radius 12px
        border-width droppable-border-width
        border-style solid
        border-color wip-color
        padding 8px
        margin 8px
        width 2em
        &.red
            background red-color
        &.orange
            background orange-color
        &.blue
            background blue-color
        &.green
            background green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .story
        font-size 1.4em
        text-align center
        border-width 0
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .hole
        border-radius 8px
        border 2px dotted Gray

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .done-one
    .todo-one
        border-radius 8px
        border 2px solid Gray
        color White
  
    .todo-one
        background White

    .done-one
        &.red
            background red-color
        &.orange
            background orange-color
        &.blue
            background blue-color
        &.green
            background green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Initial selection of draggable
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .one:hover
    .storyIsDone:hover
        border-width draggable-border-width
        border-style draggable-border-style
        border-color draggable-border-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Once dragging starts
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .ui-draggable-dragging.one    
        border-style solid

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Dynamically activated drop targets
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    // Their CSS must be sufficiently specific for them to take
    // precedence over the defaults above.
    //
    #wip .kanban.storyIsInProgress.droppable
    #team #downstreamPortal.droppable
        border-style solid
        border-color draggable-border-color
