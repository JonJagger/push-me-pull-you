
single-bullet = '\2022'

backlog-color = LightGray
red-color     = Red
orange-color  = #FFBF00
blue-color    = Blue
green-color   = Green
done-color    = LightGray

draggable-border-width = 4px
draggable-border-style = dotted
draggable-border-color = DarkGray

border-radius-width = 8px

wip-color = Moccasin

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

#edge
    font-size 0.75em
    display table
    margin 0 auto
    
    #roll
        border-radius border-radius-width
        font-size 1em
        text-align center
        padding-left 0.5em
        padding-right 0.5em
        cursor pointer
        color White
      
    #dice
        display table-row
        #roll
            &.red
                background red-color
            &.orange
                background orange-color

    #dice_container
        margin 0 auto
        padding 10px      

    .one
    .not-one
        border-radius border-radius-width
        display inline
        padding-top 2px
        padding-right 12px
        padding-bottom 4px
        padding-left 12px
        font-size 1.2em
        border-width draggable-border-width
        border-style solid
        border-color White
        color White

    .one:before
    .not-one:before
        content single-bullet

    .not-one
        background White

    .one
        &.red
            background   red-color
        &.orange
            background   orange-color
        &.blue
            background   blue-color
        &.green
            background   green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    #team
        border-radius border-radius-width
        padding 0.5em
        &.red
            background   red-color
            border-color red-color
        &.orange
            background   orange-color
            border-color orange-color
        &.blue
            background   blue-color
            border-color blue-color
        &.green
            background   green-color
            border-color green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .portal 
        border-width draggable-border-width
        border-style solid
        border-radius border-radius-width
        width 2em
        height 18em
        &[data-toColor=backlog] 
            background backlog-color
            border-color backlog-color            
        &[data-toColor=red] 
            background red-color
            border-color red-color            
        &[data-toColor=orange]
            background orange-color
            border-color orange-color            
        &[data-toColor=blue] 
            background blue-color
            border-color blue-color            
        &[data-toColor=green] 
            background green-color
            border-color green-color            
        &[data-toColor=done] 
            background done-color
            border-color done-color            

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    #wip
        border-radius border-radius-width
        margin-left  0.5em
        margin-right 0.5em        
        height 40em
        background wip-color
        & .quarterColumn
            vertical-align top
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .kanban
        border-radius 18px
        border-width draggable-border-width
        border-style solid
        border-color wip-color
        padding 8px
        margin 8px
        width 2em
        &.red
            background red-color
        &.orange
            background orange-color
        &.blue
            background blue-color
        &.green
            background green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .story
        font-size 1.4em
        text-align center
        border-width 0
    
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .one_container
        padding 2px
        
    .hole
        border-radius border-radius-width
        border-width 2px
        border-style dotted
        border-color White

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    .done-one
    .todo-one
        border-radius border-radius-width
        border-width 2px
        border-style solid
        border-color White
        color White
  
    .todo-one
        background White

    .done-one
        border-color White
        &.red
            background red-color
        &.orange
            background orange-color
        &.blue
            background blue-color
        &.green
            background green-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Initial selection of draggable
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .one:hover
    .kanban.storyIsDone:hover
    .kanban.IsEmpty:hover
        border-width draggable-border-width
        border-style draggable-border-style
        border-color draggable-border-color

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Once dragging starts
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    .ui-draggable-dragging.one    
    .ui-draggable-dragging.kanban    
        border-style dotted

    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Dynamically activated drop targets
    //- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //
    // Their CSS must be sufficiently specific for them to take
    // precedence over the defaults above.
    //
    #wip .kanban.storyIsInProgress.droppable
    #team #downstreamPortal.droppable
    #team #upstreamPortal.droppable    
        border-style dotted
        border-color draggable-border-color
